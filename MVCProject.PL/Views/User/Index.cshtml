@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>


@if (Model.Count() > 0)
{
    <div class="m-2">
        <form class="row">
            <div class="col-8">
                <input type="text" name="valueSearch" class="form-control" placeholder="User Email" />
            </div>
            <div class="col-4">
                <input value="Search" type="submit" class="btn btn-primary" />

            </div>
        </form>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
               

                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.Fname)</th>


                <th>@Html.DisplayNameFor(U => U.Lname)</th>


                <th>@Html.DisplayNameFor(U => U.Email)</th>

                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>



        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                @*E:\Backend-Rout\MVC\MyDemo\MVCProject\MVCProject.PL\wwwroot\Files\Images\17b7d69f-e555-4405-9fdd-90e3ad2d32901596658115058.jpg*@
                <tr>
                    

                    <td>@Html.DisplayFor(E => user.Id)</td>
                    <td>@Html.DisplayFor(E => user.Fname)</td>
                    <td>@Html.DisplayFor(E => user.Lname)</td>
                    <td>@Html.DisplayFor(E => user.Email)</td>
                    <td>@Html.DisplayFor(E => user.PhoneNumber)</td>
                    <td>@string.Join(",",user.Roles)</td>





                    <partial name="_ButtonPartialView" model="@user.Id.ToString()" />

                </tr>



            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Users :</h4>
    </div>
}


