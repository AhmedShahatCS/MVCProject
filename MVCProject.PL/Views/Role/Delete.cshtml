@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    Are you Sure to Delete  @Model.RoleName
    
</h1>

<div asp-vaildation-summery="All">
</div>
<form asp-action="ConfirmDelete">


        <div class="form-group">
            <label asp-for="Id" class="col-form-label"></label>
            <input readonly asp-for="Id" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="RoleName" class="col-form-label"></label>
            <input readonly asp-for="RoleName" class="form-control" />

        </div>
       

        <input value="Delete" class="btn btn-danger" type="submit">
        <a asp-controller="Role" asp-action="Index" class="btn btn-light">Back To List</a>
  
</form>