@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Login Now!</h1>



<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="All"></div>
        <form asp-action="Login">

            
            <input class="text" asp-for="Email" placeholder="Email" required="">
            <span class="text-danger" asp-validation-forr="Email"></span>
            <br />
            <input class="text" asp-for="Password" placeholder="Password" required="">

            <span class="text-danger" asp-validation-for="Password"></span>
           
            <br />

            <div class="wthree-text">
                <label class="anim">
                    <input class="checkbox" asp-for="RemenberMe">
                    <span>Remember Me</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNIN">
        </form>

        <p>Don't have an Account? <a asp-action="Registor"> Registor Now!</a></p>
        <p> <a asp-action="ForgetPassword"> Forget Password</a></p>

    </div>
</div>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}



